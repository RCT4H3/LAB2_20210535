<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:weightSum="3">


            <Button
                android:id="@+id/btnMenu"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:backgroundTint="#CCCCCC"
                android:text="←"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="24sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TeleQuiz"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtPuntaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end"
                android:text="Puntaje\n0"
                android:textAlignment="viewEnd"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txtTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Microondas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ¿Pregunta ejemplo?"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/opc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5B5B5B"
            android:text="Redes"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/opc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5B5B5B"
            android:text="Redes"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/opc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5B5B5B"
            android:text="Redes"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/txtResultadoFinal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@color/original_button_color"
            android:textColor="#FFFFFF"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anterior"/>

            <Space
                android:layout_width="32dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
